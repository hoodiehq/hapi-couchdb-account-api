{
  "name": "hapi-couchdb-account-api",
  "description": "Account REST API backed by CouchDB",
  "main": "index.js",
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "start": "bin/server",
    "pretest": "standard",
    "test": "nyc tap --no-cov tests/unit/**/*-test.js",
    "test:watch": "gaze 'clear && node tests | tap-min' 'tests/**/*.js' 'index.js' 'lib/**/*.js'",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "postsemantic-release": "npm run coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hoodiehq/hapi-couchdb-account-api.git"
  },
  "keywords": [
    "hapi",
    "plugin",
    "couchdb",
    "account",
    "hoodie"
  ],
  "author": "The Hoodie Community (hood.ie)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hoodiehq/hapi-couchdb-account-api/issues"
  },
  "homepage": "https://github.com/hoodiehq/hapi-couchdb-account-api#readme",
  "devDependencies": {
    "coveralls": "^2.11.4",
    "gaze-cli": "^0.2.0",
    "hapi": "^11.0.2",
    "nock": "^3.0.0",
    "nyc": "^3.1.0",
    "semantic-release": "^6.0.3",
    "standard": "^5.1.0",
    "tap": "^2.2.0",
    "tap-min": "^1.0.0"
  },
  "dependencies": {
    "boom": "^3.0.0",
    "request": "^2.61.0"
  }
}
